@using LyyCMS.Web.Startup
@using LyyCMS.Web.Models.WeChat
@model WeChatAccountViewModel

@{ ViewBag.Title = L("WxFans");
    ViewBag.CurrentPageName = PageNames.WxFans; }
@section scripts
    {
    <environment names="Development">
        <script src="~/view-resources/Views/WxFans/Index.js" asp-append-version="true"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Views/WxFans/Index.min.js" asp-append-version="true"></script>
    </environment>
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1>@L("WxFans")</h1>
            </div>
            <div class="col-sm-6">
               

            </div>
        </div>
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-6">
                                <!--Use for bulk actions-->
                            </div>
                            <div class="col-md-6">
                                @await Html.PartialAsync("~/Views/WeChatAccount/Index.AdvancedSearch.cshtml")
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="WxFansTable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>@L("Openid")</th>
                                        <th>@L("NickName")</th>
                                        <th>@L("FaceImg")</th>
                                        <th>省份</th>
                                        <th>市区</th>
                                        <th>@L("Sex")</th>
                                        <th>是否关注</th>
                                        <th style="width: 250px">@L("Actions")</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<div class="modal fade" id="WxAccountEditModal" tabindex="-1" role="dialog" aria-labelledby="WxAccountEditModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
        </div>
    </div>
</div>
